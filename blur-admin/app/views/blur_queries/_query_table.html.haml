%table#queries-table.zebra-striped
  %thead
    %tr.header
      %th User ID
      - if can? :index, :blur_queries, :query_string
        %th Query
      %th Table Name
      %th Start
      %th Fetch
      %th Status
      %th Actions/Info
  %tbody
    = render blur_queries
    %tr#no-queries-row
      %td{:colspan => can?(:index, :blur_queries, :query_string) ? 7 : 6}
        %b No Available Queries
