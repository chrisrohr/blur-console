-content_for :title, 'Search'
-content_for :javascript do
  =javascript_include_tag 'jquery.jstree', 'compiled/search'

#search_page_wrapper
  #filter_section
    = form_tag search_path, :method => 'post', :id=>'search_form', :remote => true do
      #filters_wrap
        #standard
          = text_field_tag :query_string, params[:query_string], :placeholder => "Enter a Query String"

        = submit_tag "Search", :id => "search_submit", :class => "btn primary"
        #advanced
          .header
            .btn Advanced
          .body
            .filter Table:
            = select_tag :blur_table, options_from_collection_for_select(@blur_tables, :id, :table_name)
            .filter
              Column Families:
            #filter_columns.hidden
              = render 'filters', :columns => @columns
            .filter
              Super Query:
              = check_box_tag :super_query, true, true
            .filter
              Record Only:
              = check_box_tag :record_only, true, false,:disabled => 'disabled'
            .filter
              Start:
              = number_field_tag :offset, 0, :min => 0
            .filter
              Fetch:
              = number_field_tag :result_count, 10, :min => 0
        %img.hidden{:id => "loading-spinner",
             :src => image_path("/images/loader.gif"),
             :alt => "Loading..."}
        #saved
          .header.btn
            Saved
          .body
            .saved
              = render "saved", :searches => @searches, :blur_table => @blur_table
            .save_actions
              .filter#save_name_wrap
                #save_label= label_tag :save_name, 'Name:'
                = text_field_tag 'save_name'
              .filter#buttons
                %button.btn.primary{:name => "save", :type => "button", :id => 'save_button'}
                  Save New
                %button.btn{:name => "update", :type => "button", :id => 'update_button'}
                  Update
  #results_wrapper
    #results_container