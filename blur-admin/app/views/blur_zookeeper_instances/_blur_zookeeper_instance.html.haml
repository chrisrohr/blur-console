.blur_zookeeper_instance{ :id => @current_blur_zookeeper_instance.id }
  #hdfs
    %h2 HDFS Status
    %ul
      %li get HDFS capacity data
      %li generate pie chart of capacity data
      %li something else?
      %li and that other thing
      %li with the stuff
  #zookeeper
    %h2 Zookeeper Status
    %ul
      %li
        %b Name:
        = @current_blur_zookeeper_instance.name
      %li
        %b URL:
        = @current_blur_zookeeper_instance.url
      %li
        %b Status:
        = @current_blur_zookeeper_instance.status
  #blur
    %h2 Blur Status
    #controllers
      - if @controllers
        %h3= "Controllers(#{@controllers.length})"
        #controllers-placeholder
          %ul
            - @controllers.each do |controller|
              %li
                = controller.node_name
      - else
        %h3 Controllers
        %p Not Available
    #shards
      - if @shards
        %h3= "Shards(#{@shards.length})"
        %ul
          - @shards.each do |shard|
            %li
              = shard.node_name
      - else
        %h3 Shards
        %p Not Available
