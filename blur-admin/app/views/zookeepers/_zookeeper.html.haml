.zookeeper_info
  %table{:id => "#{zookeeper.id}" }
    %thead{:id => zookeeper.id}
      %tr
        %th{ :colspan => 3 }
          .zookeeper-name
            = zookeeper.name
          .zookeeper-status
            = case zookeeper.status; when 0 then "Offline"; when 1 then "Online"; else "Not Available"; end

    %tbody
      %tr
        %td.index
        %td.cont
          Controllers
        %td.shard
          Shards
      %tr
        %td.index
          Blur Version
        %td.cont
          .bv-cont
            .controllers-bv.grey_box.ui-corner-all
              No Controllers Available
        %td.shard
          .bv-shard
            .shards-bv.grey_box.ui-corner-all
              No Shards Available
      %tr
        %td.index
          Status
        %td.cont
          .stat-cont
            .controllers-online.grey_box.ui-corner-all
              .number
                0
              .word
                Contollers Online
            .controllers-disabled.grey_box.ui-corner-all
              .number
                0
              .word
                Controllers Disabled
            .controllers-offline.grey_box.ui-corner-all
              .number
                0
              .word
                Controllers Offline
        %td.shard
          .stat-shard
            .shards-online.grey_box.ui-corner-all
              .number
                0
              .word
                Shards Online
            .shards-disabled.grey_box.ui-corner-all
              .number
                0
              .word
                Shards Disabled
            .shards-offline.grey_box.ui-corner-all
              .number
                0
              .word
                Shards Offline
      %tr
        %td{ :colspan => 3 }
          .warning
