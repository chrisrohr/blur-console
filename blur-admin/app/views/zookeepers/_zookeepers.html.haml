#zookeepers
  - @zookeepers.each do |zookeeper|
    .zookeeper_info
      %table{:id => "#{zookeeper.id}" }
        %thead{:id => zookeeper.id}
          %tr
            %th{ :colspan => 3 }
              = zookeeper.name
        %tbody
          %tr
            %td.index
            %td.cont
              Controllers
            %td.shard
              Shards
          %tr
            %td.index
              blur version
            %td.cont
              .bv-cont
                .controllers-bv.grey_div.ui-corner-all
                  No Controllers Available
            %td.shard
              .bv-shard
                .shards-bv.grey_div.ui-corner-all
                  No Shards Available
          %tr
            %td.index
              status
            %td.cont
              .stat-cont
                .controllers-online.grey_div.ui-corner-all
                  .number
                    0
                  .word
                    Contollers Online
                .controllers-disabled.grey_div.ui-corner-all
                  .number
                    0
                  .word
                    Controllers Disabled
                .controllers-offline.grey_div.ui-corner-all
                  .number
                    0
                  .word
                    Controllers Offline
            %td.shard
              .stat-shard
                .shards-online.grey_div.ui-corner-all
                  .number
                    0
                  .word
                    Shards Online
                .shards-disabled.grey_div.ui-corner-all
                  .number
                    0
                  .word
                    Shards Disabled
                .shards-offline.grey_div.ui-corner-all
                  .number
                    0
                  .word
                    Shards Offline
