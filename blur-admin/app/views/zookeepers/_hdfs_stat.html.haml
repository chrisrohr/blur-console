.hdfs_info
  %table.hdfs_table{:id => "#{hdfs.id}"}
    %thead
      %tr
        %th.hdfs-title{ :colspan => 2}
          .hdfs-name
            = hdfs.name + " - "
            %span.hdfs-host
              =hdfs.host

    %tbody
      %tr
        %th Blocks
        %th Nodes
      %tr
        %td.center
          .blocks-corr.label.status.center
            %span.number 0
            Corrupt Blocks
        %td.center
          .progress.progress-up-down
            .bar.up.nodes-live{:style=>'width:100%'}
              %span.number 0
              Online/Offline
            .down.nodes-dead
              %span.number
      %tr
        %td.center
          .blocks-miss.label.status.center
            %span.number 0
            Missing Blocks
        %td.center &nbsp;
      %tr
        %td.center
          .nodes-under.label.status.center
            %span.number 0
            Under Replicated Blocks
        %td.center &nbsp;
      %tr
        %td{ :colspan => 2 }
          .warning
