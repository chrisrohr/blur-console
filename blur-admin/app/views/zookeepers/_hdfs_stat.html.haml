.hdfs_info
  %table.hdfs_table{:id => "#{hdfs.id}"}
    %thead
      %tr
        %th.hdfs-title{ :colspan => 2}
          .hdfs-name
            = hdfs.name + " - "
            %span.hdfs-host
              =hdfs.host

    %tbody
      %tr
        %th Blocks
        %th Nodes
      %tr
        %td.center
          .blocks-corr.label.status.center
            %span.number 0
            Corrupt Blocks
        %td.center
          .nodes-live.label.status.center
            %span.number 0
            Live Nodes
      %tr
        %td.center
          .blocks-miss.label.status.center
            %span.number 0
            Missing Blocks
        %td.center
          .nodes-dead.label.status.center
            %span.number 0
            Dead Nodes
      %tr
        %td.center
          .nodes-under.label.status.center
            %span.number 0
            Under Replicated Blocks
        %td.center &nbsp;
      %tr.node-access-row
        %th{:colspan => 2}
          Cannot access Live/Dead Nodes
      %tr
        %td{ :colspan => 2 }
          .warning
