-if can?(:enable, :blur_tables)
  %button.btn.btn-primary{:disabled => 'disabled', :blur_bulk_action => 'enable'} Enable Tables
-if can?(:delete, :blur_tables)
  %button.btn.btn-danger{:disabled => 'disabled', :blur_bulk_action => 'delete'} Delete Tables

%table.table.table-striped.table.table-bordered{:blur_cluster_id => cluster}
  %thead
    %tr
      %th
        %input.bulk-action-checkbox.check-all{:type => "checkbox", :disabled=>'disabled'}
      %th Name
      %th Row Count
      %th Record Count
  %tbody
    %tr.no-tables
      %th
      %th{:colspan=>3} Loading Tables...