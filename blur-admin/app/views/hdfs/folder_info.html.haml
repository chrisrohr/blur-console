#file_table
  %table
    %tr
      %td Directory
      %td= @stat.isdir
    %tr
      %td Files Count
      %td#file_count Calculating...
    %tr
      %td Folders Count
      %td#folder_count Calculating
    %tr
      %td Files Size
      %td#file_size Calculating
    %tr
      %td Last Modified
      %td= Time.at(@stat.modification_time/1000.0).strftime("%D %r")
    %tr
      %td Owner
      %td= @stat.owner
    %tr
      %td Group
      %td= @stat.group
    %tr
      %td Permission
      %td= @stat.permission