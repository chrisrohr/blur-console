#file_table
  %table
    %tr
      %td Length
      %td=number_to_human_size file_stat.length, :precision => 4
    %tr
      %td Directory
      %td=file_stat.isdir
    %tr
      %td Block Reps
      %td=number_with_delimiter file_stat.block_replication, :delimiter => ','
    %tr
      %td Block Size
      %td=number_with_delimiter file_stat.blocksize, :delimiter => ','
    %tr
      %td Owner
      %td=file_stat.owner
    %tr
      %td Group
      %td=file_stat.group