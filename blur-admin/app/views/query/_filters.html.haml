- if @columns
  - @columns.columnFamilies.each do |family, cols|
    .column_family_filter
      %ul
        %li#family{:id=>family}
          %a{:href=>'#'}= family
          %ul
            - cols.each do |col|
              %li#column{:id=>"#{family}_#{col}"}
                %a{:href=>'#'}= col
  = submit_tag "Search", :disabled => true, :id => "search_submit"
  %img{:id => "loading-spinner", :src => "/images/spinner.gif", :alt => "Loading...", :hidden => true}