-content_for :title, 'Query'
-content_for :javascript do
  =javascript_include_tag 'jquery.jstree', 'compiled/query'

#query-page
  = form_tag query_path, :method => 'post', :id=>'query_form', :remote => true do
    #filter_section.half-section
      .filter-title
        =label_tag :f, "Filters:"
      .partial-section
        = label_tag :t, "Table:"
        = select_tag :t, options_for_select(@tables)
      .partial-section
        = label_tag :s, "Super Query:"
        = check_box_tag :s, true, true
      .partial-section
        .column-title
          Column Families:
        .column-title
          %a{:title => "Check All", :href => '#', :id => 'checkall'} Check All
          %a{:title => "Uncheck All", :href => '#', :id => "uncheckall"} Uncheck All
        #filter_columns{:style=>'display:none'}
          = render 'filters'
      .partial-section
        = label_tag :r, 'Fetch:'
        = select_tag :r, options_for_select([25, 50, 100])
      .partial-section
        = label_tag :a, 'Start:'
        = text_area_tag :a, 0
      .partial-section
        = submit_tag "Search", :disabled => true, :id => "search_submit"
    #bar_section{:style=>'display:none'}
      %img{:id => "arrow", :class => 'ui-icon ui-icon-triangle-1-w'}
    #query_section.half-section.partial-page
      #search_section
        .query-title
          = label_tag :q, "Search:"
        .query-input
          = label_tag :q, "Query:"
        .query-input
          = text_area_tag :q, params[:q]
          %img{:id => "loading-spinner", :src => "/images/spinner.gif", :alt => "Loading...", :hidden => true}
      #results_container.partial-results
