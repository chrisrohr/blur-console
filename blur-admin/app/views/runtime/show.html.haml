- content_for :title, 'Runtime'
- content_for :javascript do
  = javascript_include_tag 'compiled/runtime'

Tables:
%select#table-select{:name => 'tables'}
  -@tables.each do |table|
    %option{:value => table}
      =table
#runtime-graphs
  .runtime-graph-container
    %h4 Query Performance Graph
    #performance-graph.runtime-graph
  .runtime-graph-container
    %h4 Average Time Graph
    #average-time-graph.runtime-graph
  .runtime-graph-container
    %h4 Table Usage Graph
    #usage-graph.runtime-graph
#runtime-queries
  #queries-title
    %h2 Queries
  %table#queries-table
    %tr#queries-table-header
      %th Query
      %th Super Query
      %th Start
      %th Fetch
      %th
        Time - ms
        %br
        (cpu/real)
      %th Status
      %th uuid
      %th Actions
    -@running_queries.each do |query|
      %tr
        %th
          =query.query_string
        %th
          -if (query.super_query_on)
            On
          -else
            Off
        %th
          -if (query.start)
            = query.start
          -else
            ???
        %th
          -if (query.fetch_num)
            = query.fetch_num
          -else
            ???
        %th
          -if (query.cpu_time and query.real_time)
            =query.cpu_time.to_s + '/' + query.real_time.to_s
          -else
            ???
        %th
          -if (query.complete == 1)
            complete
          -elsif (query.interrupted)
            interrupted
          -elsif (query.running)
            running
          -else
            ???
        %th
          -if (query.uuid)
            = number_with_delimiter(query.uuid, :delimiter => ',')
          -else
            ???
        %th
          -if (query.running)
            %input{:type => "button", :class => "runtime-cancel-query", :value => "Cancel", :id => query.uuid}

    -if @running_queries.empty?
      %tr
        %td{:colspan => 8, :class => 'error'}
          %b No Available Queries
