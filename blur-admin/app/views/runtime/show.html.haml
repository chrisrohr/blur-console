- content_for :title, 'Runtime'

- content_for :javascript do
  = javascript_include_tag 'compiled/runtime'

#runtime-page
  Tables:
  %select#table-select{:name => 'tables'}
    %option{:value => 'all'}
      All
    -@tables.each do |table|
      %option{:value => table}
        =table
  #runtime-graphs
    .runtime-graph-container
      %h4 Database Utilization
      #usage-graph.runtime-graph
  #runtime-queries
    #queries-title
      %h2 Queries
    %h4 Filters:
    = form_tag runtime_path, :method => 'post', :id=>'runtime_filters', :remote => true do
      #super-query-filter.section
        = label_tag :on, 'Super Query On:'
        = check_box_tag :on, true, false
        = label_tag :off, 'Super Query Off:'
        = check_box_tag :off, true, false
      #submit-filter.section
        = submit_tag 'Filter', :id => 'filter-runtime'
    = render 'query_table'
      
#more-info-container

#failure-message{:hidden => true}
  #failed-info{:hidden => true}
  #failed-buttons 
    %form
      =label_tag :t, "The cancel was unsuccessful, would you like to try canceling again?", :id => "failed-label"
      %button#confirm-resubmit.cancel{:type => "button"}
        Cancel
      %button#confirm-resubmit.resubmit{:type => "button"}
        Re-Submit