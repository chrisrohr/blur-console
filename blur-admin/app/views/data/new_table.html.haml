%H2 Create Blur Table

%form{:action => create_table_path, :method => "post"}
  
  %h3 Aliases
  %ul
    %input{:type => "button", :id => "add_alias", :value => "Add Alias"}
    %li.alias
      Alias Name:
      %input{:class => 'aliasname', :placeholder => "Alias Name"}
      Class Name:
      %input{:class => 'classname', :placeholder => "Class Name"}
      %input{:type => 'button', :class => 'delete_parent', :value => "Remove Alias"}

  %h3 Default
  Default Alias Name:
  %input{:placeholder => "Default Alias Name"}

  %h3 Fields
  %ul
    %input{:type => "button", :id => "add_column_family", :value => "Add Column Family"}
    %li.column_family
      Column Family Name:
      %input{:placeholder => "Column Family Name"}
      %input{:type => "button", :class => "delete_parent", :value => "Remove Column Family"}
      %ul
        %input{:type => "button", :class => "add_column", :value => "Add Column"}
        %li.column
          Column:
          %input{:placeholder => "Column Name"}
          Alias Name:
          %input{:placeholder => "Alias Name"}
          %input{:type => "button", :class => "make_column_array", :value => "Array"}
          %input{:type => "button", :class => "delete_parent", :value => "Remove Column"}

%li.column_array
  %ul
    Default Analyzer:
    %input{:placeholder => "Default Analyzer"}
    %input{:type => "button", :class => "add_key_value", :value => "add key:value"}
    %input{:type => "button", :class => "make_column", :value => "String"}
    %input{:type => "button", :class => "delete_grandparent", :value => "Remove Column"}
    %li.key_value
      Key:
      %input{:placeholder => "Key"}
      Value:
      %input{:placeholder => "Value"}
      %input{:type => "button", :class => "delete_parent", :value => "Remove Key Value Pair"}
      
-content_for :javascript do
  =javascript_include_tag 'compiled/new_table'
