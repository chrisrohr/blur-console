<% var stats = hdfs.get('most_recent_stats'); %>
<div class="hdfs-title label">
  <% if(hdfs.get('recent_stats')) { %>
    <img src="/assets/green_light.png"/>
  <% } else { %>
    <img src="/assets/red_light.png"/>
  <% } %>
  <%= hdfs.get('name') %>
  <span class="title-subtle"><%= hdfs.get('host') %></span>
</div>
<div class="hdfs-body">
  <table>
    <tr>
      <td class="hdfs-chart-container">
        <div class="hdfs-chart"></div>
        <div class="legend">
          <div class="legend-box healthy"></div><h6>Healthy</h6><br />
          <div class="legend-box corrupt"></div><h6>Corrupt</h6><br />
          <div class="legend-box missing"></div><h6>Missing</h6><br />
          <div class="legend-box under-replicated"></div><h6>Under-Rep</h6>
        </div>
      </td>
      <td class="hdfs-bar-container">
        <div class="hdfs-live progress progress-success progress-status">
          <div class="bar" style="width:<%= hdfs.node_width() %>%"></div>
        </div>
        <%= stats.live_nodes %> out of <%= stats.total_nodes %> live nodes<br /><br />
        <div class="hdfs-dfs progress progress-status">
          <div class="bar" style="width:<%= hdfs.usage_width() %>%"></div>
        </div>
        <%= hdfs.percent_used() %> dfs usage
      </td>
    </tr>
  </table>
</div>
