- if blur_table.hosts
  .hosts.table_info_tree
    %b Hosts
    %ul
      -blur_table.hosts.each do |host, shards|
        %li.host{:id=>"#{host}"}
          %a{:href=>''}= host
          %ul
            -shards.each do |shard|
              %li.shard{:id=>"#{host}_#{shard}"}
                %a{:href=>''}= shard
- else
  %div
    Not Available
